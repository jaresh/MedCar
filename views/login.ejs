<!doctype html>
<html>
<head>
		<link rel="stylesheet" type="text/css" href="stylesheets/style.css">
</head>
<body>
<div>

	<h1>Login</h1>

	<% if (message.length > 0) { %>
		<div><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/login" method="post">
		<div>
			<label>Login</label>
			<input type="text" name="login">
		</div>
		<div>
			<label>Password</label>
			<input type="password" name="password">
		</div>

		<button type="submit">Login</button>
	</form>

	<hr>
</div>
</body>
</html>